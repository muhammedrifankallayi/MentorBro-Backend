{
    "info": {
        "_postman_id": "whapi-integration-collection",
        "name": "MentorBro WhatsApp API (Whapi)",
        "description": "Collection for testing the Whapi.Cloud WhatsApp integration in MentorBro Backend.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Send Text Message (Direct)",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"to\": \"8157867616\",\n    \"message\": \"Hello from MentorBro! This is a test message.\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/whatsapp/send-text",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "whatsapp",
                        "send-text"
                    ]
                },
                "description": "Sends a direct text message to a specific number. If 'to' is omitted, it uses the default number 8157867616."
            },
            "response": []
        },
